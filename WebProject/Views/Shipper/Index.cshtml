@model IEnumerable<WebProject.Models.Shipper>

<h2 align="center">Shippers</h2>

<table border="1" style="margin-left: auto; margin-right: auto">
    <thead>
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>City</th>
        <th>Details</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var ship in Model)
    {
        <tr>
            <td>@ship.id</td>
            <td>@ship.name</td>
            <td>@ship.city</td>
            <td>
                <a href="@Url.Action("About", "Shipper", new { shipperId = ship.id })" class="btn btn-primary">View Details</a>
            </td>
            <td>
                <a href="@Url.Action("Contact", "Shipper", new { shipperId = ship.id })" class="btn btn-primary">Contact Us</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<a href="@Url.Action("Index", "Home")" style="padding: 10px 20px; background-color: #0dcaf0; color: white; border-radius: 5px;">&lt;&lt;Back</a>